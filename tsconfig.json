{
  "compilerOptions": {
    "outDir": "./lib/",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@config/*": [
        "./src/config/*"
      ]
    },
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}